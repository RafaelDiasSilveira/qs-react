{
  "setupFiles": [
    "raf/polyfill",
    "<rootDir>/src/tests/setupTests.js"
  ],
  "snapshotSerializers": ["enzyme-to-json/serializer"],
  "moduleNameMapper": {
    "\\.(css|less)$": "<rootDir>/src/tests/__mocks__/styleMock.js",
    "\\moment$": "<rootDir>/src/tests/__mocks__/momentMock.js"
  },
  "collectCoverage": true,
  "collectCoverageFrom": [
    "**/src/**/*.{js,jsx}",
    "!**/src/**/app.{js,jsx}",
    "!**/node_modules/**",
    "!**/public/**",
    "!**/tests/**"
  ],
  "coverageReporters": [
    "lcov",
    "text"
  ]
}